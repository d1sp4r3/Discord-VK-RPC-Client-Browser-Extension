{
  "manifest_version": 3,
  "name": "VK Music Now Playing",
  "description": "Отслеживает текущий трек в VK Music",
  "version": "1.0",
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": [
    "*://vk.com/*",
    "*://music.vk.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://vk.com/*",
        "*://music.vk.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}